@model Grupp7.ViewModels.IndexViewModel;
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol> @*testar*@
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/three-brown-bunnies.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Klimatförändringen påverkar djuren.
                    <a class="btn btn-default" href=@Url.Action("Observation", "Home")>
                        Läs mer
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/icebergs-2574987.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Världens isar smälter. I Arktisk rapporteras isen under veckan haft en rekordlåg utbredning för att vara i början av smältsäsongen..
                    <a class="btn btn-default" href=@Url.Action("Observation", "Home")>
                        Läs mer
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/observers.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Hjälp till med att göra folk mer medvetna om klimatförändringen genom att samla in observationer. Bli en klimatobservatör idag!
                    <a class="btn btn-default" href=@Url.Action("Register", "Home")>
                        Registrera
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <h2> Crowdsourcing <img src="~/images/crowdsourcing.jpg" alt="Card image" class="img-responsive" style="width: 10%; display: inline;" />  </h2>
        <p>
            Crowdsourcing är en bra forskningsmetod som gör det möjligt för allmänheten att bidra med idéer, data och tid till projekt trots att de inte är formellt utbildade experter.
            Flera forskningsprojekt har redan framgångsrikt använt denna metod i sitt arbete. Crowdsourcing gör det möjligt att samla in data i mycket större skala på ett kosteffekt sätt.
            På klimatkollen kan du bidra med dina observationer så att klimatförändringarna i Sverige bli mer synlig.
        </p>
        <a class="btn btn-primary" href=@Url.Action("Register", "Home")>
            Registrera
        </a>
    </div>
    <div class="col-md-6">
        <h2>Klimatförändringar över tid</h2>
        <div>
            <img src="~/images/shmi_temp.png" alt="Card image" class="img-responsive">
        </div>
        <p>
            Visualering av större klimatförändringar över tid med hjälp av statistik.
            <a class="btn btn-primary" href=@Url.Action("Diagram", "Home")>
                Läs mer
            </a>
        </p>
    </div>
</div>

<div>
    <div class="LeaderboardHeader">
        <span>Position</span>
        <span>Användarnamn</span>
        <span>Antalet observationer</span>
    </div>
    @foreach (var item in Model.UserRankList)
    {
        <div class="LeaderboardRow">
            <span>@item.position</span>
            <span>@item.User.Username</span>
            <span>@item.observationNum </span>
        </div>
    }
</div>

<style>
    .LeaderboardHeader {
        display: table;
        width: 100%;
        padding: 10px 0px 10px 0px;
        table-layout: fixed; /* For cells of equal size */
        background-color: #222;
        color: white;
    }

        .LeaderboardHeader span {
            display: table-cell;
            text-align: center;
        }
    .LeaderboardRow {
        background-color: white;
        display: table;
        width: 100%;
        padding: 10px 0px 20px 0px;
        table-layout: fixed; /* For cells of equal size */
    }
        .LeaderboardRow span {
            display: table-cell;
            text-align: center;
        }
</style>