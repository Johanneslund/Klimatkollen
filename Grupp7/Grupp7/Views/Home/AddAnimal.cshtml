@model Grupp7.ViewModels.AddAnimalViewModel

@{
    ViewData["Title"] = "View";
}

<h2>View</h2>

<h4>Animal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAnimalToUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for="Animal.SpecieId" asp-items="Model.Species" class="form-control">
</select>
            </div>
            <div class="form-group">
                <label asp-for="Animal.Datetime" class="control-label"></label>
                <input asp-for="Animal.Datetime" class="form-control" />
                <span asp-validation-for="Animal.Datetime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Animal.Coat" class="control-label"></label>
                <input asp-for="Animal.Coat" class="form-control" />
                <span asp-validation-for="Animal.Coat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Animal.Longitude" class="control-label"></label>
                <input asp-for="Animal.Longitude" class="form-control" />
                <span asp-validation-for="Animal.Longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Animal.Latitude" class="control-label"></label>
                <input asp-for="Animal.Latitude" class="form-control" />
                <span asp-validation-for="Animal.Latitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
