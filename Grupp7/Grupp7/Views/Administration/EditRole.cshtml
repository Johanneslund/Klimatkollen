@model Grupp7.ViewModels.EditRoleViewModel;
@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Redigera Roll</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post" class="mt-3">
            @*<div class="form-group-row">*@
            <div class="card">

                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h3 class="card-title">@user</h3>
                        }
                    }
                    else
                    {
                        <h3 class="card-title">Inga Användare</h3>
                    }
                </div>

                <label asp-for="RoleID" class="col-sm-2 col-form-label"></label>
                <div style="padding-bottom: 15px" class="col-sm-10">
                    <input asp-for="RoleID" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group-row">
                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                <div style="padding-bottom: 15px" class="col-sm-10">
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div @*style="padding-left: 50%"*@  style="text-align: center" class="form-group-row">
                <div style="padding-bottom: 15px" class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Uppdatera</button>
                    <div class="divider" />
                    <a asp-action="ListRoles" class="btn btn-primary">Avbryt</a>
                </div>
            </div>
            <br />

            <div> </div>
            <div  class="card-footer">
                <a asp-action="EditUsersInRole" asp-controller="Administration" asp-route-roleID="@Model.RoleID" class="btn btn-primary" style="width:auto">Lägg till eller ta bort Användare</a>
            </div>
            @*</div>*@
        </form>
    </div>
</div>