@model Grupp7.ViewModels.EditRoleViewModel;
@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Redigera Roll</h2>

<form method="post" class="mt-3">
    <div class="form-group-row">
        <label asp-for="RoleID" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleID" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group-row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group-row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Uppdatera</button>
            <a asp-action="ListRoles" class="btn btn-primary">Avbryt</a>
        </div>
    </div>
    <br />
    <div class="card">

        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h3 class="card-title">Inga Användare</h3>
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUsersInRole" asp-controller="Administration" asp-route-roleID="@Model.RoleID" class="btn btn-primary" style="width:auto">Lägg till eller ta bort Användare</a>
        </div>
    </div>
</form>