@model Grupp7.ViewModels.EditUserViewModel;
@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Redigera Användare</h2>
<hr />
<div class="row">
    <div class="col-md-6">
            <form method="post" class="mt-3">
                <div class="form-group row">
                        <label asp-for="ID" class="col-xs-3 text-left">Roll-ID</label>
                        <div class="col-sm-10">
                        <input asp-for="ID" disabled class="form-control"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Email" class="col-xs-3 text-left">E-post adress</label>
                        <div class="col-sm-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Username" class="col-xs-3 text-left">Användarnamn</label>
                        <div class="col-sm-10">
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div style="text-align: center" class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Updatera</button>
                            <a asp-action="ListUsers" class="btn btn-primary">Avbryt</a>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h2>Roller för Användare</h2>
                            <hr />
                        </div>
                        <div class="card-body">
                            @if (Model.Roles.Any())
                            {
                                foreach (var role in Model.Roles)
                                {
                                    <h5 class="card-title">@role</h5>
                                }
                            }
                            else
                            {
                                <h5 class="card-title">Inga Roller för användaren</h5>
                            }
                        </div>
                        <div class="card-footer">
                            <a asp-action="ManageUserRoles" asp-route-userId="@Model.ID" style="width:auto" class="btn btn-primary">Hantera Roller</a>
                        </div>
                    </div>
</form>
    </div>
</div>